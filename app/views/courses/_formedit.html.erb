<div class="row">
<%= form_for @course, :html => {:multipart => true} do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="span6 offset3">
    <div class="field">
      <%= f.label :title, "Course Name" %>
      <%= f.text_field :coursename %>
    </div>
    <div class="field">
      <%= f.label :title, "Course Description" %>
      <%= f.text_area :coursedescription, :rows => "4" %>
    </div>
    <div class="field">
      <%= f.file_field :resource %>
    </div>
    <div class="field">
      <%= f.label :tags %>
      <%= f.text_field :tag_list, placeholder: "Add Some Tags: Example 'Leadership, Microsoft Office, ect...'" %>
    </div>
    <div class="actions">
      <%= f.submit 'Edit Course', :class => 'btn btn-large btn-success' %>
      <%= link_to 'Back', courses_path, class: "btn btn-large" %>
    </div>
  </div>
<% end %>
</div>