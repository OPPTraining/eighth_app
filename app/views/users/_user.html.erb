<% if current_user.admin? %>
	<li>
	  <%= gravatar_for user, size: 52 %>
	  <%= link_to user.name, user %>
	  <br/>
	  <% if current_user.admin? %>
	    | <%= link_to "delete", user, method: :delete,
	                                  data: { confirm: "You sure?" }, class: "btn btn-mini btn-danger" %>
	    | <%= link_to "edit", edit_user_path(user), class: "btn btn-mini btn-success" %>
	  <% end %>
	</li>
<% end %>
