<% if current_user.admin? %>
<% provide(:title, 'Active Users') %>
<h1>Active users</h1>
<div class="row">
	<div class="span6 offset3">
		<p><%= link_to "Add New User", signup_path, class: "btn btn-primary" %>

	<%= form_tag users_path, :method => 'get', :class =>"input-medium search-query" do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], :placeholder => 'Search Users...' %>
      <%= submit_tag "Search", :name => nil, class: "btn btn-inverse" %>
    
    
		<% end %>
	</div>
	</p>
</div>
	</br>

	<div class="span6 offset3">
		<table class="table table-striped">
  			<%= render @users %>
		</table>
	</div>

	<br/>
	<div class ="span6 offset3">
		<p><%= link_to "View Inactive Users", '/inactive', class: "btn btn-warning" %></p>
	</div>
	<% end %>
</div>

<% if not current_user.admin? %>
	<h3>Administrator Access is required</h3>

<% end %>