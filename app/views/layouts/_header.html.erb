<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <nav>
        <%= link_to(image_tag("/assets/opp.jpg", :alt => "OPP", :height => "10%", :width => "8%", class: "img-rounded pull-left"), root_path) %>

        <%= link_to "OPP Training", root_path, id: "logo", class: "brand" %>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          
          <% if signed_in? %>
          <% if current_user.admin? || current_user.supervisor? %>
            <li><%= link_to "Users", users_path %></li>
          <% end %>

          <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Courses <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "External Trainings", externaltrainings_path %></li>
                <li><%= link_to "Courses", courses_path %></li>
              </ul>
            </li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i>
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Change Password", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>